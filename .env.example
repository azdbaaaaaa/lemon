# Lemon Environment Variables Example
# Copy this file to .env and fill in the values

# AI Configuration
LEMON_AI_API_KEY=sk-your-api-key-here
LEMON_AI_PROVIDER=openai
LEMON_AI_MODEL=gpt-4

# Server Configuration
LEMON_SERVER_HOST=0.0.0.0
LEMON_SERVER_PORT=8080
LEMON_SERVER_MODE=release

# Log Configuration
LEMON_LOG_LEVEL=info
LEMON_LOG_FORMAT=json

# MongoDB Configuration
LEMON_MONGO_URI=mongodb://localhost:27017
LEMON_MONGO_DATABASE=lemon

# Redis Configuration
LEMON_REDIS_ADDR=localhost:6379
LEMON_REDIS_PASSWORD=
LEMON_REDIS_DB=0
